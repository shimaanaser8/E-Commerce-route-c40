<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="inputLayoutStyle">
        <item name="android:layout_width">@dimen/_260sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_20sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_20sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_20sdp</item>
        <item name="boxStrokeColor">@color/main_color</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="android:textColorHint">@color/lite_color</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    // item category style

    <style name="iv_category_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="tv_category_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/main_tv_color</item>
    </style>

    //item home appliance style
    <style name="cv_home_appliance_style">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="android:layout_width">158dp</item>
        <item name="android:layout_height">211dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="strokeColor">#B3C4D2</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>

    <style name="btn_favoriets_style">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
    </style>

    <style name="product_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_tv_color</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/_7sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
    </style>

    <style name="tv_review_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_tv_color</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">26</item>
    </style>


    //item home appliance style
    <style name="cv_offers_style">
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="strokeColor">#B3C4D2</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>
</resources>